<ui:FluentWindow x:Class="NoSleepHD.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="NoSleepHD"
                 Height="300"
                 Width="300"
                 MinWidth="300"
                 MinHeight="300">

    <DockPanel>

        <ui:TitleBar DockPanel.Dock="Top"
                     ShowMaximize="False"
                     Title="{Binding RelativeSource={RelativeSource AncestorType=ui:FluentWindow}, Path=Title, Mode=OneWay}" />

        <Grid>

            <ContentControl Content="{Binding Content}" />
            <ui:SnackbarPresenter x:Name="RootSnackbar" />

        </Grid>

    </DockPanel>

</ui:FluentWindow>
